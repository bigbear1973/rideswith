    "db:generate": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^6.19.2",
    "dotenv": "^17.2.3",
    "grammy": "^1.35.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "prisma": "^6.19.2",
    "tsx": "^4.19.0",
    "typescript": "^5"
  }
}
