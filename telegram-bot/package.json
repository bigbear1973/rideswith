{
  "name": "rideswith-telegram-bot",
  "version": "1.0.0",
  "private": true,
  "description": "Telegram bot for RidesWith.com ride discovery",
  "main": "dist/index.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
