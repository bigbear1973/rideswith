generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// Auth.js Models (required for authentication)
// ============================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  slug          String?   @unique // Custom profile URL (e.g., /u/username)
  bio           String?   @db.Text
  location      String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Social links
  instagram     String?   // Instagram handle or URL
  strava        String?   // Strava profile URL

  // Relations
  accounts      Account[]
  sessions      Session[]
  organizers    OrganizerMember[]
  chapters      ChapterMember[]
  rsvps         Rsvp[]
  brands        Brand[]
  rideRoutes    RideRoute[]
  rideComments  RideComment[]
  ridePhotos    RidePhoto[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// Brand & Chapter Models (hierarchical organization)
// ============================================

model Brand {
  id          String        @id @default(cuid())
  name        String        // "Straede"
  slug        String        @unique // "straede"
  type        CommunityType @default(BRAND) // BRAND, CLUB, or GROUP
  domain      String?       // "straede.cc" (for Brand.dev lookup)
  description String?       @db.Text

  // Brand.dev populated fields
  logo           String? // Full logo URL (for light backgrounds)
  logoDark       String? // Logo for dark backgrounds
  logoIcon       String? // Square icon version
  primaryColor   String? // Hex color
  secondaryColor String? // Hex color
  fonts          Json?   // Font family info from Brand.dev
  backdrop       String? // Wide banner image URL
  slogan         String? // Brand tagline

  // Social links (manually entered)
  instagram String? // Instagram handle or URL
  twitter   String? // Twitter/X handle or URL
  facebook  String? // Facebook page URL
  strava    String? // Strava club URL
  youtube   String? // YouTube channel URL

  // Sponsor settings
  sponsorLabel    String?  // "sponsors" | "partners" | "ads" - defaults to "sponsors"
  hidePresentedBy Boolean @default(false) // Hide the "Presented by" sidebar card on ride pages

  // Ownership
  createdById String?
  createdBy   User?   @relation(fields: [createdById], references: [id], onDelete: SetNull)

  // Metadata
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  chapters Chapter[]
  sponsors Sponsor[]
}

model Chapter {
  id      String @id @default(cuid())
  brandId String
  brand   Brand  @relation(fields: [brandId], references: [id], onDelete: Cascade)

  name String // "Leipzig"
  slug String // "leipzig"
  city String // City name for display/search

  // Optional branding overrides (inherits from Brand if null)
  customLogo   String?
  customColors Json? // { primaryColor, secondaryColor }

  // Sponsor settings (can override brand-level settings)
  sponsorLabel    String?  // "sponsors" | "partners" | "ads" - inherits from brand if null
  hidePresentedBy Boolean? // Hide "Presented by" card - inherits from brand if null

  // Stats (managed counters)
  memberCount Int @default(0)
  rideCount   Int @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  members  ChapterMember[]
  rides    Ride[]
  sponsors Sponsor[]

  @@unique([brandId, slug])
}

model ChapterMember {
  id        String      @id @default(cuid())
  chapterId String
  chapter   Chapter     @relation(fields: [chapterId], references: [id], onDelete: Cascade)
  userId    String
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  role      ChapterRole @default(MODERATOR)
  joinedAt  DateTime    @default(now())

  @@unique([chapterId, userId])
}

enum ChapterRole {
  // New roles
  OWNER      // Full control, can transfer ownership, delete community
  ADMIN      // Can manage members, edit settings, create rides
  MODERATOR  // Can create rides, moderate content
  // Legacy roles (will be migrated)
  LEAD       // Maps to OWNER
  AMBASSADOR // Maps to MODERATOR
}

enum CommunityType {
  BRAND   // Commercial brand (Rapha, Straede)
  CLUB    // Cycling club
  TEAM    // Racing or competitive team
  GROUP   // Informal group
}

enum SponsorSize {
  SMALL   // Logo + name only (compact)
  MEDIUM  // Logo + name + description (up to 150 chars)
  LARGE   // Backdrop image + logo + name + description (featured)
}

// ============================================
// App Models
// ============================================

model Organizer {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?  @db.Text
  logoUrl     String?
  coverUrl    String?
  website     String?

  // Brand theming
  primaryColor   String?
  secondaryColor String?

  // Stats
  memberCount Int @default(0)
  rideCount   Int @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  members OrganizerMember[]
  rides   Ride[]
}

model OrganizerMember {
  id          String   @id @default(cuid())
  organizerId String
  userId      String
  role        OrganizerRole @default(MEMBER)
  joinedAt    DateTime @default(now())

  organizer Organizer @relation(fields: [organizerId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([organizerId, userId])
}

enum OrganizerRole {
  OWNER
  ADMIN
  MEMBER
}

model Ride {
  id          String   @id @default(cuid())
  title       String
  description String?  @db.Text

  // Date & Time
  date        DateTime
  endTime     DateTime?
  timezone    String   @default("UTC")

  // Location
  locationName    String
  locationAddress String
  latitude        Float
  longitude       Float

  // Ride details
  distance    Float?   // in km
  elevation   Float?   // in meters
  pace        RidePace @default(MODERATE) // Legacy field, kept for backward compatibility
  paceMin     Float?   // Minimum speed in km/h (new)
  paceMax     Float?   // Maximum speed in km/h (new)
  terrain     String?

  // Route
  routeUrl    String?
  gpxUrl      String?

  // Capacity
  maxAttendees Int?

  // Pricing
  isFree      Boolean @default(true)
  price       Float?
  currency    String  @default("EUR")

  // Status
  status      RideStatus @default(PUBLISHED)

  // Recurrence (for series of rides)
  recurrencePattern   RecurrencePattern? // WEEKLY, BIWEEKLY, MONTHLY
  recurrenceDay       Int?               // 0-6 for day of week (0=Sunday)
  recurrenceEndDate   DateTime?          // When the series ends
  recurrenceSeriesId  String?            // Links rides in same series (first ride's ID)
  isRecurringTemplate Boolean @default(false) // True for the "template" ride that defines the series

  // Live location tracking
  isLive          Boolean   @default(false) // Is ride currently happening/tracked
  liveLocationUrl String?   // Google Maps live share URL
  liveStartedAt   DateTime? // When organizer marked ride as live

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  organizerId String
  organizer   Organizer @relation(fields: [organizerId], references: [id], onDelete: Cascade)

  // Optional chapter association (for brand-affiliated rides)
  chapterId String?
  chapter   Chapter? @relation(fields: [chapterId], references: [id], onDelete: SetNull)

  rsvps      Rsvp[]
  routes     RideRoute[]  // Community-contributed route links
  comments   RideComment[] // Post-ride comments
  photos     RidePhoto[]   // Post-ride photos
}

// Community-contributed route links (Komoot, RideWithGPS, Garmin, Strava, etc.)
model RideRoute {
  id        String   @id @default(cuid())
  rideId    String
  userId    String
  platform  String   // e.g., "Komoot", "RideWithGPS", "Garmin", "Strava"
  url       String   // URL or embed code
  createdAt DateTime @default(now())

  ride Ride @relation(fields: [rideId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([rideId, platform]) // One link per platform per ride
}

enum RidePace {
  CASUAL
  MODERATE
  FAST
  RACE
}

enum RideStatus {
  DRAFT
  PUBLISHED
  CANCELLED
  COMPLETED
}

enum RecurrencePattern {
  WEEKLY
  BIWEEKLY
  MONTHLY
}

model Rsvp {
  id        String     @id @default(cuid())
  rideId    String
  userId    String
  status    RsvpStatus @default(GOING)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  ride Ride @relation(fields: [rideId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([rideId, userId])
}

enum RsvpStatus {
  GOING
  MAYBE
  NOT_GOING
}

// ============================================
// Cake & Coffee Stop - Post-ride social features
// ============================================

model RideComment {
  id        String   @id @default(cuid())
  rideId    String
  userId    String
  content   String   @db.Text
  parentId  String?  // For replies - references parent comment
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  ride    Ride          @relation(fields: [rideId], references: [id], onDelete: Cascade)
  user    User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  parent  RideComment?  @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies RideComment[] @relation("CommentReplies")

  @@index([rideId, createdAt])
  @@index([parentId])
}

model RidePhoto {
  id          String   @id @default(cuid())
  rideId      String
  userId      String

  // Cloudinary fields
  publicId    String   // Cloudinary public ID for transformations
  url         String   // Original URL
  thumbnailUrl String? // Pre-generated thumbnail URL
  width       Int?
  height      Int?
  isVideo     Boolean  @default(false) // true for video uploads

  caption     String?
  createdAt   DateTime @default(now())

  ride Ride @relation(fields: [rideId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([rideId, createdAt])
}

// ============================================
// Community Sponsors/Partners/Ads
// ============================================

model Sponsor {
  id          String  @id @default(cuid())

  // Sponsor can belong to a brand (applies to all chapters) OR a specific chapter
  brandId     String?
  brand       Brand?   @relation(fields: [brandId], references: [id], onDelete: Cascade)
  chapterId   String?
  chapter     Chapter? @relation(fields: [chapterId], references: [id], onDelete: Cascade)

  name        String
  domain      String? // For Brand.dev lookup
  description String? @db.VarChar(150) // Ad copy for medium/large (max 150 chars)
  website     String  // Click-through URL

  // Assets (from Brand.dev or manual upload)
  logo         String?
  backdrop     String? // Wide banner image for large display
  primaryColor String?

  // Display settings
  displaySize  SponsorSize @default(SMALL) // SMALL, MEDIUM, LARGE
  isActive     Boolean @default(true)
  displayOrder Int     @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([brandId, isActive])
  @@index([chapterId, isActive])
}
